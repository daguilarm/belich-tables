{
    "name": "daguilarm/livewire-tables",
    "description": "A dynamic table component for Laravel Livewire",
    "keywords": [
        "daguilarm",
        "livewire",
        "datatables",
        "tables",
        "laravel"
    ],
    "homepage": "https://github.com/daguilarm/livewire-tables",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "daguilarm",
            "email": "damian.aguilarm@gmail.com",
            "homepage": "https://daguilar.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "livewire/livewire": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0"
    },
    "suggest": {
        "maatwebsite/excel": "Required to use export functionality"
    },
    "autoload": {
        "psr-4": {
            "Daguilarm\\LivewireTables\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Daguilarm\\LivewireTables\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
              "Daguilarm\\LivewireTables\\LivewireTablesServiceProvider"
            ]
        }
    }
}
